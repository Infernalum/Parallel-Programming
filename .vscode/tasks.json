{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "OpenMP task",
      "command": "/usr/bin/gcc",
      "args": [
        //"-g",
        "-O0",
        "-fopenmp",
        "${file}",
        "-o",
        "${fileDirname}/build/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Задача создана отладчиком."
    },
    {
      "type": "cppbuild",
      "label": "MPI task",
      "command": "mpicc",
      "args": [
        "-g",
        "-O0",
        "${file}",
        "-o",
        "${fileDirname}/build/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Задача создана отладчиком."
    }
  ],
